{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "win: run debug x64",
      "type": "cppvsdbg",
      "request": "launch",
      "program": "${workspaceFolder}/out/x64/Debug/bin/CppModuleHost.exe",
      "cwd": "${workspaceFolder}",
      "console": "externalTerminal",
      "preLaunchTask": "win: build debug x64"
    },
    {
      "name": "linux: run debug x64",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/out/x64/Debug/bin/CppModuleHost",
      "cwd": "${workspaceFolder}",
      "MIMode": "gdb",
      "miDebuggerPath": "/usr/bin/gdb",
      "externalConsole": false,
      "preLaunchTask": "linux: build debug x64"
    }
  ]
}
